<%= form_with(model: invitation) do |form| %>  
  <% if invitation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(invitation.errors.count, "error") %> prohibited this invitation from being saved:</h2>

      <ul>
        <% invitation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :company_id, style: "display: block" %>
    <%= form.select :company_id,  Company.all.collect { |c| [c.name, c.id]}  %>
  </div>

  <% unless invitation.id %>
    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, required: true %>
    </div>
  <% end %>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status, disabled: invitation.id ? false : true %>
  </div>

  <div>
    <%= form.label :invited_at, style: "display: block" %>
    <%= form.datetime_field :invited_at %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
