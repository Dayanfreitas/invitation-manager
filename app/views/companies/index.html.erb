<h1>
<%=I18n.t('views.company.title') %>
</h1>

<table>
  <tr>
    <th>ID</th>
    <th>
      <%=I18n.t('views.company.fields.name') %>
    </th>
  </tr>

  <% @companies.each do |company| %>
    <tr>
      <td><%= company.id %></td>
      <td><%= company.name %></td>
      <td><%= link_to I18n.t('views.company.show'), company %></td>
      <td><%= link_to I18n.t('views.company.edit'), edit_company_path(company) %></td>
      <td><%= button_to I18n.t('views.company.delete'), company, method: :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to I18n.t('views.company.new'), new_company_path %>
