<h1>Company</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= button_to "Destroy this invitation", company, method: :delete %></td>
  </tr>
<% end %>