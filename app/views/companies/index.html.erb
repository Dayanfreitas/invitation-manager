<h1>Company</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
  </tr>

  <% @companies.each do |company| %>
    <tr>
      <td><%= company.id %></td>
      <td><%= company.name %></td>
      <td><%= link_to 'Show', company %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
      <td><%= button_to "Destroy this invitation", company, method: :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New company", new_company_path %>
