<h2><%= I18n.t("views.login.title") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label I18n.t("views.login.fields.email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label I18n.t("views.login.fields.password") %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label I18n.t("views.login.remember-me") %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit I18n.t("views.login.log_in") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
